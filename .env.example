# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=cs2admin
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=cs2_manager

# MySQL Connection Pool Configuration (for improved performance)
MYSQL_POOL_SIZE=5
MYSQL_MAX_OVERFLOW=10
MYSQL_POOL_TIMEOUT=30
MYSQL_POOL_RECYCLE=3600
MYSQL_POOL_PRE_PING=True
MYSQL_ECHO=False  # Enable/disable SQLAlchemy SQL query logging

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Connection Pool Configuration (for improved performance)
REDIS_POOL_SIZE=10
REDIS_RETRY_ON_TIMEOUT=True
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
ASYNCSSH_LOG_LEVEL=WARNING  # Reduce asyncssh verbosity (set to INFO for detailed SSH logs)

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
